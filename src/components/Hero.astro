---
import ResumeIcon from "../icons/ResumeIcon";
import EmailIcon from "../icons/EmailIcon";
import ButtonToolTip from "./ButtonToolTip.jsx";
import { useTranslations } from "../i18n/utils";
import type { languageList } from "../i18n/ui";

const currentLang = Astro.currentLocale || "es";

const translateLabels = useTranslations(
  currentLang as keyof typeof languageList
);
---

<h1
  class="w-full text-4xl dark:text-4xl text-slate-800 dark:text-slate-300 font-bold"
>
  {translateLabels("hero.greeting")}
  <strong
    class="bg-clip-text text-transparent bg-gradient-to-r dark:from-sky-400 dark:to-sky-600 from-slate-800 to-slate-700 text-4xl font-bold"
    >Carlos Pulido</strong
  >
</h1>
<h2
  class="w-full mx-auto text-pretty font-normal dark:text-gray-500 text-gray-800 py-4 text-xl"
>
  <strong class="dark:text-yellow-200 text-slate-700 font-bold"
    >{translateLabels("hero.profession")}</strong
  >
  {translateLabels("hero.location")}
</h2>
<p class="w-full mx-auto dark:dark:text-gray-500 text-gray-800 py-1 text-xl">
  {translateLabels("hero.haveSpent")}
  <strong class="dark:text-yellow-200/70 text-slate-700 font-bold"
    >{translateLabels("hero.timeOfStudy")}</strong
  >
  {translateLabels("hero.thanks")}
  <a
    class="text-slate-800/80 border-b-2 dark:dark:text-gray-500 dark:hover:text-gray-400 dark:border-b-gray-500 border-b-slate-800/80 hover:border-b-slate-900 dark:hover:border-b-gray-400 hover:text-slate-900"
    href="https://www.theodinproject.com/"
    rel="noopener noreferrer"
    target="_blank"
  >
    The Odin Project.</a
  >
</p>

<p class="w-full mx-auto dark:text-gray-500 text-gray-800 py-1 text-xl">
  {translateLabels("hero.optionsText")}
</p>

<div
  class="flex w-full flex-col tablet:w-[400px] tablet:gap-6 desktop:w-[400px] justify-start gap-4 pt-6"
>
  <a
    class="flex w-[200px] h-10 items-center justify-center dark:bg-sky-700 dark:ring dark:ring-sky-200  dark:text-slate-300 bg-slate-700 text-md font-semibold gap-2 rounded-md"
    href={currentLang === "es" ? "/resume_es.pdf" : "/resume_en.pdf"}
    target="_blank"
    ><span><ResumeIcon /></span>{translateLabels("hero.cvButton")}</a
  >
  <a
    class="flex w-[200px] h-10 items-center justify-center dark:bg-emerald-700 dark:ring  dark:ring-emerald-200 dark:text-slate-300 bg-slate-700 text-md font-semibold gap-2 rounded-md"
    href="mailto:carlosfrontend@hotmail.com"
    ><EmailIcon />{translateLabels("hero.sendEmail")}</a
  >
  <ButtonToolTip
    currentLang={Astro.currentLocale || "es"}
    client:only="react"
  />
</div>
