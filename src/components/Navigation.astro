---
import ThemeIcons from "./ThemeIcons";
import SpainIcon from "../../src/icons/SpainIcon";
import UnitedkingdomIcon from "../../src/icons/UnitedkingdomIcon.jsx";

const buttonTransition =
  "transition transform duration-100 ease-in-out delay-50  hover:text-slate-950 hover:scale-125 hover:font-semibold dark:text-slate-300";

const primaryNavItems = [
  {
    title: "Inicio",
    url: "#inicio",
    class: buttonTransition,
  },
  {
    title: "Proyectos",
    url: "#proyectos",
    class: buttonTransition,
  },
  {
    title: "Sobre mí",
    url: "#sobre-mi",
    class: buttonTransition,
  },
  {
    title: "Habilidades",
    url: "#habilidades",
    class: buttonTransition,
  },
];

const secondaryNavItems = [
  {
    logo: SpainIcon,
    url: "/",
    label:'Cambiar idioma a Español.'
  },
  {
    logo: UnitedkingdomIcon,
    url: "/en",
    label:'Cambiar idioma a Inglés.'
  },
];
---

<nav
  class="fixed top:0 w-full z-20 nav-links flex-wrap gap-x-8 flex flex-col align-center justify-center text-slate-600 dark:bg-slate-950 bg-slate-100 md:w-full lg:rounded-md md:h-auto lg:mt-6 md:mx-auto lg:w-6/12 lg:mx-auto"
>
  <div
    class="divide-y-2 divide-gray-500 dark:divide-y-2 dark:divide-slate-100/40"
  >
    <div class="flex justify-evenly items-center text-xs py-2 px-2">
      {
        primaryNavItems.map((link) => (
          <a class={link.class} href={link.url}>
            {link.title}
          </a>
        ))
      }
    </div>
    <div class="flex justify-end items-center gap-x-2 pr-6 py-2">
      {secondaryNavItems.map((link) => <a class= 'flex gap-x-1 items-center' aria-label={link.label} href={link.url}><span class="text-xs">{link.url === '/en' ? 'EN' : 'ES'}</span>{<link.logo />}</a>)}
      <ThemeIcons client:load />
    </div>
  </div>
</nav>
