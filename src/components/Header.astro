---
import { Image } from "astro:assets";
import Badge from "./Badge.astro";
import meImage from "../../src/images/me.webp";
---

<header
  id="inicio"
  class="relative w-full px-8 pt-24 flex items-center gap-x-4 tablet:px-48"
>
  <Image
    loading="eager"
    class="rounded-full size-16"
    src={meImage}
    alt="Carlos Pulido"
  />
  <Badge
    ><a
      aria-label="Enlace a Linkedin"
      href="https://www.linkedin.com/in/carlosfrontend/"
      rel="noopener noreferrer"
      target="_blank">Disponible para trabajar</a
    >
  </Badge>
</header>
