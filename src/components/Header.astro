---
import { Image } from "astro:assets";
import Badge from "./Badge.astro";
import meImage from "../../src/images/me.webp";
import { useTranslations } from "../i18n/utils";
import type { languageList } from "../i18n/ui";

const currentLang = Astro.currentLocale || "es";

const translateLabels = useTranslations(
  currentLang as keyof typeof languageList
);
---

<header
  id={translateLabels('home.id')}
  class="relative w-full px-12 pt-24 flex items-center gap-x-4 tablet:w-8/12"
>
  <Image
    loading="eager"
    class="rounded-full size-11"
    src={meImage}
    alt="Carlos Pulido"
  />
  <Badge
    ><a
      aria-label="Enlace a Linkedin"
      href="https://www.linkedin.com/in/carlosfrontend/"
      rel="noopener noreferrer"
      target="_blank">{translateLabels('header.title')}</a
    >
  </Badge>
</header>
